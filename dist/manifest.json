{
  "name": "Youtube SubTabs",
  "version": "1.0.0",
  "description": "Group and filter your youtube subscriptions",
  "manifest_version": 2,
  "incognito": "split",
  "options_page": "index.html",
  "browser_action": {
    "default_popup": "index.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["https://*.youtube.com/feed/subscriptions"],
      "js": ["content-script.js"]
    }
  ],
  "permissions": [
    "activeTab",
    "storage"
  ],
  "icons": {
    "256": "icon.png"
  }
}
