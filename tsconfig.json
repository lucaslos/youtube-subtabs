{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es2018",
    "moduleResolution": "node",
    "jsx": "preserve",
    "allowJs": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "noEmit": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "keyofStringsOnly": true,
    "paths": {
      "*": [
        "src/*",
        "*"
      ]
    },
    "plugins": [
      {
        "name": "typescript-styled-plugin"
      }
    ]
  },
  "include": [
    "src",
    "test"
  ]
}
